<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/Mainbtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginTop="60px"
        android:src="@drawable/mainhomebutton" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FECCBE" />

        <ImageButton
            android:id="@+id/Qna"
            android:layout_width="70dp"
            android:layout_height="47dp"
            android:layout_marginTop="18.5dp"
            android:layout_marginLeft="16dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/qna" />

        <ImageButton
            android:id="@+id/Issue"
            android:layout_width="91dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/Qna"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="17dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/informationissueclick" />

        <ImageButton
            android:id="@+id/Free"
            android:layout_width="67dp"
            android:layout_height="48dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="18.5dp"
            android:layout_toRightOf="@id/Issue"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/free" />

        <ImageButton
            android:id="@+id/Not"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17.5dp"
            android:layout_toRightOf="@id/Free"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/notice" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="430dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#EEEEEE" />

        <ImageButton
            android:id="@+id/myp"
            android:layout_width="63dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="53dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/mypage" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="78dp"
            android:layout_height="57dp"
            android:layout_toRightOf="@id/myp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="53dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/post"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/home"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/postwrite" />


    </RelativeLayout>




</LinearLayout>