<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:id="@+id/base">

    <ImageButton
        android:id="@+id/Mainbtn"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:layout_marginTop="60px"
        android:src="@drawable/mainhomebutton" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FECCBE" />

        <ImageButton
            android:id="@+id/qna"
            android:layout_width="70dp"
            android:layout_height="47dp"
            android:layout_marginTop="18.5dp"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/qna" />

        <ImageButton
            android:id="@+id/issue"
            android:layout_width="91dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/qna"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="17dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/informationissue" />

        <ImageButton
            android:id="@+id/free"
            android:layout_width="67dp"
            android:layout_height="48dp"
            android:layout_toRightOf="@id/issue"
            android:layout_marginTop="18.5dp"
            android:layout_marginLeft="17dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/free" />

        <ImageButton
            android:id="@+id/not"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17.5dp"
            android:layout_toRightOf="@id/free"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/notice" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="카테고리"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/dream5"/>

        <Spinner
            android:id="@+id/category"
            android:layout_width="280dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:hint="카테고리를 선택하세요."
            android:textSize="15dp"
            android:textColor="#595959"
            android:background="#C2C2C2"
            android:fontFamily="@font/dream5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="제목"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/dream5"/>
        <EditText
            android:id="@+id/title_et"
            android:layout_width="310dp"
            android:layout_height="45dp"
            android:gravity="left"
            android:hint="제목을 입력하세요."
            android:textSize="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="내용"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/dream5"/>

    </LinearLayout>
    <EditText
        android:id="@+id/content_et"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:gravity="top"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="내용을 입력하세요."
        android:textSize="15dp"/>

    <Button
        android:id="@+id/reg_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="발행"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:fontFamily="@font/dream5"
        android:background="@drawable/buttonround"/>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#EEEEEE" />

        <ImageButton
            android:id="@+id/myp"
            android:layout_width="63dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="53dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/mypage" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="78dp"
            android:layout_height="57dp"
            android:layout_toRightOf="@id/myp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="53dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/post"
            android:layout_width="65dp"
            android:layout_height="50dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/home"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/postwrite" />


    </RelativeLayout>

</LinearLayout>