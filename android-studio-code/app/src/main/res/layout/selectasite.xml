<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:src="@drawable/selectasite"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:src="@drawable/partselect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginTop="60px"
        android:background="#B8E6E1">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="3"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/eye"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="3dp"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/eye2" />

            <ImageButton
                android:id="@+id/neck"
                android:layout_marginTop="28dp"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/neck" />

            <ImageButton
                android:id="@+id/stomach"
                android:layout_marginLeft="3dp"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/stomach" />

            <ImageButton
                android:id="@+id/waist"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/waist" />

            <ImageButton
                android:id="@+id/leg"
                android:layout_marginLeft="3dp"
                android:layout_column="0"
                android:layout_row="2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/leg" />

            <ImageButton
                android:id="@+id/foot"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:scaleType="centerInside"
                android:src="@drawable/foot" />

        </GridLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#EEEEEE" />

        <ImageButton
            android:id="@+id/home"
            android:contentDescription="홈 바로가기 버튼"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/community"
            android:contentDescription="커뮤니티 바로가기 버튼"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/home"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/postwrite" />

        <ImageButton
            android:id="@+id/hospital"
            android:contentDescription="병원 바로가기 버튼"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/community"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/hospital" />

    </RelativeLayout>

</LinearLayout>