<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="100px"
        android:src="@drawable/dpcmr" />
    <ImageView
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_marginTop="100px"
        android:layout_gravity="center"
        android:src="@drawable/chatboticon" />
    <ImageView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="50px"
        android:layout_gravity="center"
        android:src="@drawable/wlseks" />

    <ImageButton
        android:id="@+id/ChbStart"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/start"
        tools:ignore="SpeakableTextPresentCheck" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#EEEEEE" />

        <ImageButton
            android:id="@+id/home"
            android:contentDescription="홈 바로가기 버튼"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/community"
            android:contentDescription="커뮤니티 바로가기 버튼"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/home"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/postwrite" />

        <ImageButton
            android:id="@+id/hospital"
            android:contentDescription="병원 바로가기 버튼"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/community"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/hospital" />

    </RelativeLayout>



</LinearLayout>